{
  "name": "panda",
  "author": "Peter Shih <ptshih@gmail.com>",
  "version": "0.0.4",
  "description": "Panda",
  "private": true,
  "dependencies": {
    "accounting": "0.4.1",
    "babel": "5.8.21",
    "babel-eslint": "4.0.10",
    "babelify": "6.2.0",
    "bluebird": "2.9.34",
    "body-parser": "1.13.3",
    "browserify": "11.0.1",
    "compression": "1.5.2",
    "cors": "2.7.1",
    "envify": "3.4.0",
    "eslint": "1.2.1",
    "eslint-plugin-react": "3.2.3",
    "express": "4.13.3",
    "flux": "2.1.1",
    "hbs": "3.1.0",
    "immutable": "3.7.4",
    "iron_worker": "0.1.6",
    "less": "2.5.1",
    "less-plugin-clean-css": "1.5.1",
    "lodash": "3.10.1",
    "morgan": "1.6.1",
    "muni": "1.2.3",
    "nconf": "0.7.2",
    "nodemon": "1.4.1",
    "react": "0.13.3",
    "react-router": "0.13.3",
    "request": "2.61.0",
    "response-time": "2.3.1",
    "serve-favicon": "2.3.0",
    "store": "1.3.17",
    "twilio": "2.3.0",
    "uglify-js": "2.4.24"
  },
  "devDependencies": {
    "live-reload": "*",
    "parallelshell": "*",
    "watch": "*",
    "watchify": "*"
  },
  "main": "server.js",
  "browser": "app.js",
  "scripts": {
    "prebuild:js": "npm run lint",
    "pretest": "npm run lint",
    "preinstall": "npm run clean",
    "postinstall": "npm run build",
    "test": "mocha",
    "start": "node --harmony server.js",
    "start:watch": "DEBUG=muni:* nodemon --harmony -w server.js -w app.js -w api server.js",
    "clean": "rm -rf assets/*",
    "bump": "git checkout master && git pull origin master && npm version patch && git push --follow-tags",
    "lint": "eslint --ext .js --ext .jsx --ignore-path .gitignore app",
    "live-reload": "live-reload assets/ --port 9091",
    "deploy": "npm run bump && git push heroku",
    "build": "npm run build:js && npm run build:css",
    "build:js": "mkdir -p assets/js && browserify --extension=.jsx app.js | uglifyjs -m -o assets/js/main.min.js",
    "build:css": "mkdir -p assets/css && lessc --clean-css='--s1 --advanced --compatibility=ie8' less/main.less assets/css/main.min.css",
    "watch": "parallelshell 'npm run start:watch' 'npm run watch:js' 'npm run watch:css' 'npm run live-reload'",
    "watch:js": "mkdir -p assets/js && watchify --extension=.jsx app.js -o assets/js/main.js -v",
    "watch:css": "mkdir -p assets/js && watch 'lessc less/main.less assets/css/main.css' less/"
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "engines": {
    "node": "0.12.5",
    "npm": "2.11.2"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/ptshih/panda.git"
  },
  "bugs": {
    "url": "https://github.com/ptshih/panda/issues"
  },
  "homepage": "https://github.com/ptshih/panda",
  "license": "MIT"
}
